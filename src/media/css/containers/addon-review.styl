@import '../lib'


.addon-review .page--main
.addon-review h1
  max-width $layout--page-medium


.addon-review
  .page--main
    background $color--white
    border-radius 5px
    padding $layout--island-padding


.addon-review-header
  border-bottom 1px solid $color--border
  display flex
  justify-content space-between
  margin-bottom 25px


.addon-review--empty
  .page--main
    max-width 500px
    text-align center

  .page--header h1
    max-width 500px

  p
    font-size 18px
    font-weight 300
    margin-top 0

  a
    display inline-block
    margin 0 10px


.addon-listing-for-review
  margin 0
