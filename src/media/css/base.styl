@import 'lib';

*
  box-sizing border-box

html,
body,
.app-container
  height 100%
  margin 0
  padding 0

body
  background $color--grey-light;
  overflow-x hidden

ul
  list-style none
  padding 0

html,
body,
.app-container
  min-height 100%
  width 100%

.app
  display flex
  min-height 100%;
  flex-direction column

main
  flex 1

footer
  align-self flex-end

menu
  padding-left 0

dt
  font-weight 500

dd
  margin 0 0 10px 20px

.fullscreen
  align-items center
  background $color--white
  display flex
  height 100%
  justify-content center
  left 0
  padding 5%
  position fixed
  top 0
  width 100%
